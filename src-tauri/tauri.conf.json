{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/nicegui/static/tauri/tauri.conf.json",
  "productName": "a-parallel",
  "version": "0.1.0",
  "identifier": "com.a-parallel.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5179",
    "beforeBuildCommand": "bun run build:sidecar && bun run build",
    "frontendDist": "../packages/client/dist"
  },
  "app": {
    "windows": [
      {
        "title": "a-parallel",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/a-parallel-server"
    ]
  }
}
